<grid>:
    cols: 1
    rows: 2
    Label:
        id: resultado_label
        text: ""
        size_hint_y: 0.4
        font_size: 32
    GridLayout:
        cols:4
        rows:5
        Button:
            text: "7"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "8"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "9"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "+"
            on_press: root.agregarEntrada(self.text)     
        Button:
            text: "4"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "5"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "6"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "-"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "1"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "2"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "3"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "*"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "Limpiar"
            on_press: root.clearresultado()
        Button:
            text: "0"
            on_press: root.agregarEntrada(self.text)
        Button:
            text: "="
            on_press: root.llamarresultado()
        Button:
            text: "/"
            on_press: root.agregarEntrada(self.text)       